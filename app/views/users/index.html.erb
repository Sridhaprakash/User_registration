<h1> User listing page </h1>

<table>
    <thead>
        <tr>
            <th>User name</th>
            <th>Email</th>
            <th>Password</th>
        </tr>
    </thead>

    <tbody>
        <% @user.each do |user| %>
            <tr>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.password_digest %></td>
                <td><%= button_to 'Delete', user_path(user), method: :delete %></td>
            </tr>
        <% end %>
    </tbody>
</table>